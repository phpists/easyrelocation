# Вимкнути відображення розширень файлів в URL
Options -Indexes

# Увімкнути модуль mod_rewrite
RewriteEngine On

# Приховати розширення .php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Приховати розширення .html
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^\.]+)$ $1.html [NC,L]
